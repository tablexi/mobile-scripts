#!/usr/bin/env ruby
require 'colorize'

puts "Cleaning all react-native caches we know about so far..."

def run(cmd)
  puts cmd.cyan 
  system "#{cmd}"
end

run "watchman watch-del-all"
run "rm -rf $TMPDIR/react-*"
run "rm ~/.babel.json"
run "rm -rf ~/.rncache"

run "rm -rf ios/build"
run "rm -rf ios/Pods"
run "rm -rf ios/*.xcworkspace"

run "cd android ./gradlew clean && cd .."
run "rm -rf android/build"
run "rm -rf android/app/build"

run "rm -rf node_modules/"
run "yarn cache clean"
run "npm cache clean --force"

puts "Clean finished ðŸš€ run:\n  npm install or yarn".green
