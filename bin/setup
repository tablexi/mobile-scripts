#!/usr/bin/env ruby
require 'colorize'

platforms = ['ios', 'android', 'react-native']
bin_dir = File.expand_path(File.dirname(__FILE__))

args =  ARGV
args = platforms if args.empty?
puts "Installing platforms: #{args}"

args.each do |p| 
  cmd = "#{bin_dir}/setup-#{p} #{bin_dir}"
  puts system "#{cmd}"
end
puts "Setup finished ðŸš€".green